                    <a href="/me" class="navbar__link__item"><img class="navbar__link__item-img" src='/public/img/users/<%=user.photo%>' alt=""></a>
                <% } else { %>
                    <a href="/me" class="navbar__link__item"><img class="navbar__link__item-img" src='<%=aws_url%>/users/<%=user.photo%>' alt=""></a>
                <% } %>
