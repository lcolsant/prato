<script>
    function myFunction() {
        var x = document.getElementById("topnav");
        console.log(x)
        if (x.className === "navbar") {
            x.className += "__responsive";
        } else {
            x.className = "navbar";
        }
        
        
        var y = document.getElementById("username");
        console.log(y)
        if (y.className === "user__name") {
            y.className += "__responsive";
        } else {
            y.className = "user__name";
        }
    }
</script>


