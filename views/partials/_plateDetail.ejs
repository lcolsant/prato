<div class="plates">
    <div class="plates__cards-detail">
        <div class="card">
            <input type="hidden" id="<%= plate._id %>" value= '<%= plate._id %>' >
            <div class="card__picture">
                <div class="card__picture-overlay">&nbsp;</div>
                <% if(env == 'development') { %>
                  <img src="../public/img/plates/<%=plate.photo%>" class="card__picture-img" alt="">
                <% } else { %>
                  <img src="<%=aws_url%>/plates/<%=plate.photo%>" class="card__picture-img" alt="">
                <% } %>
            </div>
            <div class="card__title">
                <div class="card__title-detail">
                    <%=plate.name%>
                </div>
            </div>
            <div class="card__description">
                <p class="card__header"><em>Description:</em></p>
                <pre><span class="span__textformat"><%=plate.description%></span></pre>
            </div>
            <div class="card__recipe">
                <p class="card__header"><em>Recipe:</em></p>
                <pre><span class="span__textformat"><%=plate.recipe%></span></pre>
            </div>
            <div class="card__bottom-detail">
                <button class="btn"> <a href='/plates/update/<%=plate._id%>'>Update Plate</a></button>
                <button class="btn deletePlateBtn" id="<%=plate._id %>">Delete Plate</button>
            </div>
        </div>
    </div>
</div>  
